---
import { SignedIn, SignedOut } from "@clerk/astro/components";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Admin Login - Goodfellows CMS">
    <main
        class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900"
    >
        <SignedOut>
            <div class="max-w-md w-full mx-4">
                <div class="glass-dark rounded-2xl p-8 text-center">
                    <div
                        class="w-16 h-16 mx-auto mb-6 rounded-xl bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center"
                    >
                        <i data-lucide="shield" class="w-8 h-8 text-white"></i>
                    </div>
                    <h1 class="text-2xl font-bold text-white mb-2">
                        Admin Access
                    </h1>
                    <p class="text-gray-400 mb-8">
                        Sign in to manage the Goodfellows website content
                    </p>

                    <a
                        href="/admin/sign-in"
                        class="btn-primary w-full flex items-center justify-center gap-2"
                    >
                        <i data-lucide="log-in" class="w-5 h-5"></i>
                        Sign In
                    </a>
                </div>

                <p class="text-center text-gray-500 text-sm mt-6">
                    <a
                        href="/"
                        class="hover:text-gray-400 flex items-center justify-center gap-2"
                    >
                        <i data-lucide="arrow-left" class="w-4 h-4"></i>
                        Back to Website
                    </a>
                </p>
            </div>
        </SignedOut>

        <SignedIn>
            <meta http-equiv="refresh" content="0;url=/admin/dashboard" />
            <div class="text-white text-center">
                <div
                    class="animate-spin w-8 h-8 border-4 border-white border-t-transparent rounded-full mx-auto mb-4"
                >
                </div>
                <p>Redirecting to dashboard...</p>
            </div>
        </SignedIn>
    </main>
</Layout>
