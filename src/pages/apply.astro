---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer";
import ApplicationForm from "../components/ApplicationForm";
---

<Layout
    title="Apply for Help - Goodfellows of Lee County"
    description="Apply for assistance from Goodfellows of Lee County. We provide holiday gifts and year-round support for families in need."
>
    <Header client:load currentPath="/apply" />

    <main class="pt-24">
        <!-- Hero -->
        <section class="section">
            <div class="container-custom">
                <div class="max-w-4xl mx-auto text-center">
                    <div
                        class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-100 text-primary-700 text-sm font-medium mb-6"
                    >
                        <i data-lucide="clipboard-list" class="w-4 h-4"></i>
                        <span>2026 Applications</span>
                    </div>

                    <h1
                        class="text-4xl md:text-5xl font-bold text-gray-900 mb-6"
                    >
                        Apply for <span class="gradient-text">Assistance</span>
                    </h1>

                    <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                        If you're a Lee County resident in need of assistance,
                        we're here to help. Applications for holiday assistance
                        are accepted from September 1 through October 31.
                    </p>

                    <div class="glass rounded-2xl p-6 max-w-xl mx-auto">
                        <div class="flex items-center gap-4 justify-center">
                            <i
                                data-lucide="calendar"
                                class="w-8 h-8 text-primary-500"></i>
                            <div class="text-left">
                                <p class="text-sm text-gray-500">
                                    Application Period
                                </p>
                                <p class="text-lg font-bold text-gray-900">
                                    September 1 - October 31, 2026
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Eligibility -->
        <section class="section bg-white/50">
            <div class="container-custom">
                <div class="max-w-3xl mx-auto">
                    <h2
                        class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center"
                    >
                        Eligibility Requirements
                    </h2>

                    <div class="grid sm:grid-cols-2 gap-4">
                        <div class="card flex items-start gap-4">
                            <div
                                class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0"
                            >
                                <i
                                    data-lucide="check"
                                    class="w-5 h-5 text-green-600"></i>
                            </div>
                            <p class="text-gray-700">
                                Must be a resident of Lee County, Illinois
                            </p>
                        </div>

                        <div class="card flex items-start gap-4">
                            <div
                                class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0"
                            >
                                <i
                                    data-lucide="check"
                                    class="w-5 h-5 text-green-600"></i>
                            </div>
                            <p class="text-gray-700">
                                Have children 17 years old or younger in the
                                household
                            </p>
                        </div>

                        <div class="card flex items-start gap-4">
                            <div
                                class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0"
                            >
                                <i
                                    data-lucide="check"
                                    class="w-5 h-5 text-green-600"></i>
                            </div>
                            <p class="text-gray-700">
                                Apply between September 1 - October 31
                            </p>
                        </div>

                        <div class="card flex items-start gap-4">
                            <div
                                class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0"
                            >
                                <i
                                    data-lucide="check"
                                    class="w-5 h-5 text-green-600"></i>
                            </div>
                            <p class="text-gray-700">
                                Demonstrate financial need
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Application Form -->
        <section class="section">
            <div class="container-custom">
                <div class="max-w-3xl mx-auto">
                    <div class="card">
                        <h2
                            class="text-2xl font-bold text-gray-900 mb-6 text-center"
                        >
                            Holiday Assistance Application
                        </h2>

                        <ApplicationForm client:load />
                    </div>
                </div>
            </div>
        </section>

        <!-- Download PDF -->
        <section class="section bg-gray-50">
            <div class="container-custom">
                <div class="max-w-2xl mx-auto text-center">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">
                        Prefer Paper?
                    </h2>
                    <p class="text-gray-600 mb-6">
                        You can also download a PDF application and mail it in
                        or drop it off at our office.
                    </p>
                    <a
                        href="/application-form.pdf"
                        class="btn-secondary inline-flex items-center gap-2"
                        download
                    >
                        <i data-lucide="download" class="w-5 h-5"></i>
                        Download PDF Application
                    </a>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
