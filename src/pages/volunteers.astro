---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer";
import VolunteerForm from "../components/VolunteerForm";
---

<Layout
    title="Volunteer with Goodfellows of Lee County"
    description="Join our team of dedicated volunteers making a difference in Lee County. Your time and talents can help provide gifts and support for families in need."
>
    <Header client:load currentPath="/volunteers" />

    <main class="pt-24">
        <!-- Hero -->
        <section class="section">
            <div class="container-custom">
                <div class="max-w-4xl mx-auto text-center">
                    <div
                        class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-100 text-accent-700 text-sm font-medium mb-6"
                    >
                        <i data-lucide="users" class="w-4 h-4"></i>
                        <span>Join Our Team</span>
                    </div>

                    <h1
                        class="text-4xl md:text-5xl font-bold text-gray-900 mb-6"
                    >
                        Become a <span class="gradient-text">Volunteer</span>
                    </h1>

                    <p class="text-xl text-gray-600 mb-10 leading-relaxed">
                        The Goodfellows of Lee County is 100% volunteer-run.
                        Every hour you contribute helps ensure that children in
                        our community have a brighter holiday season.
                    </p>
                </div>
            </div>
        </section>

        <!-- Volunteer Areas -->
        <section class="section bg-white/50">
            <div class="container-custom">
                <div class="text-center mb-12">
                    <h2
                        class="text-2xl md:text-3xl font-bold text-gray-900 mb-4"
                    >
                        Ways to Help
                    </h2>
                </div>

                <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
                    <div class="card text-center">
                        <div
                            class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center mx-auto mb-6"
                        >
                            <i data-lucide="calendar" class="w-8 h-8 text-white"
                            ></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">
                            Holiday Distribution
                        </h3>
                        <p class="text-gray-600">
                            Help sort, wrap, and distribute gifts during our
                            annual holiday giveaway event.
                        </p>
                    </div>

                    <div class="card text-center">
                        <div
                            class="w-16 h-16 rounded-2xl bg-gradient-to-br from-accent-400 to-accent-600 flex items-center justify-center mx-auto mb-6"
                        >
                            <i
                                data-lucide="clipboard-list"
                                class="w-8 h-8 text-white"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">
                            Application Processing
                        </h3>
                        <p class="text-gray-600">
                            Assist with reviewing and processing applications
                            from families in need.
                        </p>
                    </div>

                    <div class="card text-center">
                        <div
                            class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center mx-auto mb-6"
                        >
                            <i
                                data-lucide="megaphone"
                                class="w-8 h-8 text-white"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-3">
                            Community Outreach
                        </h3>
                        <p class="text-gray-600">
                            Help spread the word about our programs and
                            fundraising efforts throughout the year.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Volunteer Sign Up Form -->
        <section class="section">
            <div class="container-custom">
                <div class="max-w-2xl mx-auto">
                    <div class="card">
                        <h2
                            class="text-2xl font-bold text-gray-900 mb-6 text-center"
                        >
                            Sign Up to Volunteer
                        </h2>

                        <VolunteerForm client:load />

                        <p class="text-center text-sm text-gray-500 mt-6">
                            We'll reach out to you within 2-3 business days to
                            discuss volunteer opportunities.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
